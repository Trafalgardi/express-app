doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title Начальная страница
    // Bootstrap core CSS
    link(rel='stylesheet', href='../stylesheets/bootstrap.min.css')
    // Custom styles for this template
    link(href='../stylesheets/form-validation.css', rel='stylesheet')
    link(href='../stylesheets/style.css', rel='stylesheet')
    link(href='../stylesheets/signin.css', rel='stylesheet')
  body.bg-light.text-center
    form.form-signin(name='reg' method="post")
        img.mb-4(src='./smartphone.svg' alt='' width='72' height='72')
        h1.h3.mb-3.font-weight-normal Введите свои данные
        label.sr-only(for='inputEmail') Email
        input#inputEmail.form-control(name='email' type='email' placeholder='Email' required='' autofocus='')
        label.sr-only(for='inputPassword') Пароль
        input#inputPassword1.form-control(name='password' type='password' placeholder='Пароль' required='')
        #progress.progress(style = 'display: none')
          #progress-bar.progress-bar.bg-success(role='progressbar' style='' aria-valuenow='25' aria-valuemin='0' aria-valuemax='100')
        input#inputPassword2.form-control(type='password' placeholder='Повторите пароль' required='')
        h5#message(style='color: red')
        button.btn.btn-lg.btn-primary.btn-block(type='button' onclick='checkPassword()') Регистрация
        p.mt-5.mb-3.text-muted &copy; 2017-2019


